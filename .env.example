# Promethium Local Development Environment
# Copy this file to .env and modify as needed
# cp .env.example .env

APP_NAME=Promethium
APP_VERSION=1.0.0
DEBUG=True

# API Settings
API_PREFIX=/api/v1

# Database (SQLite for local dev, PostgreSQL for Docker)
DATABASE_URL=sqlite+aiosqlite:///./promethium.db

# Redis (optional for local dev)
REDIS_URL=redis://localhost:6379/0

# Celery (eager mode for local dev - runs tasks synchronously)
CELERY_BROKER_URL=memory://
CELERY_RESULT_BACKEND=db+sqlite:///./celery_results.db
CELERY_TASK_ALWAYS_EAGER=True

# Storage
DATA_STORAGE_PATH=./data
