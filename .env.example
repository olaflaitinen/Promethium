# Application Settings
APP_NAME=Promethium
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# API Settings
API_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
# SQLite for local dev, PostgreSQL for Docker/Production
DATABASE_URL=sqlite+aiosqlite:///./promethium.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/promethium

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_ALWAYS_EAGER=True  # Set to False for async task execution

# Security
SECRET_KEY=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Storage Paths
DATA_STORAGE_PATH=./data
MODEL_STORAGE_PATH=./models
RESULTS_STORAGE_PATH=./results

# ML Configuration
ML_DEVICE=auto  # auto, cuda, cpu
ML_DEFAULT_MODEL=unet-v2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json, pretty

